#===============================================================================
# PURPOSE: keep command name, but change default options
#===============================================================================

#-------------------------------------------------------------------------------
# PURPOSE: protect against accidental removal
#-------------------------------------------------------------------------------
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

#-------------------------------------------------------------------------------
# PURPOSE: Always human readable
#-------------------------------------------------------------------------------
alias df='df -h'

#-------------------------------------------------------------------------------
# PURPOSE: Always use wordnet dictionary -- brief
#-------------------------------------------------------------------------------
alias dict='dict -d wn'

#-------------------------------------------------------------------------------
# PURPOSE: Always unified format
#-------------------------------------------------------------------------------
alias diff='diff -u'

#-------------------------------------------------------------------------------
# PURPOSE: create a jpg file by default
#-------------------------------------------------------------------------------
alias dot='dot -Tjpg'

#-------------------------------------------------------------------------------
# PURPOSE: always sort environment variables alphabetically
#-------------------------------------------------------------------------------
alias env='env | sort'

#-------------------------------------------------------------------------------
# PURPOSE: Always kern the characters
#-------------------------------------------------------------------------------
alias figlet='figlet -k'

#-------------------------------------------------------------------------------
# PURPOSE: Always enable full cost-based query optimizer
#-------------------------------------------------------------------------------
alias find='find -O3'

#-------------------------------------------------------------------------------
# PURPOSE: Always provide all warnings
#-------------------------------------------------------------------------------
alias gcc='gcc -Wall'

#-------------------------------------------------------------------------------
# PURPOSE: Always PERL regex and a tab after filename
#-------------------------------------------------------------------------------
alias grep='grep -PT'

#-------------------------------------------------------------------------------
# PURPOSE: Make head show more by default
#-------------------------------------------------------------------------------
alias head='head -n 20'

#-------------------------------------------------------------------------------
# PURPOSE: Always create parent directories if needed
#-------------------------------------------------------------------------------
alias mkdir='mkdir -p'

#-------------------------------------------------------------------------------
# PURPOSE: create soft links by default
#-------------------------------------------------------------------------------
alias ln='\ln -s'

#-------------------------------------------------------------------------------
# PURPOSE: always let ls decide when to colorize
#-------------------------------------------------------------------------------
alias ls='ls --color=auto'

#-------------------------------------------------------------------------------
# PURPOSE: always make without built-in rules for C, low priority, lots of jobs
#-------------------------------------------------------------------------------
alias make='make PRI=-10 JOBS=8'

#-------------------------------------------------------------------------------
# PURPOSE: always DISPLAY set to back to my host
#-------------------------------------------------------------------------------
alias ssh='ssh -X'

#-------------------------------------------------------------------------------
# PURPOSE: Make tail show more by default
#-------------------------------------------------------------------------------
alias tail='tail -n 20'

#-------------------------------------------------------------------------------
# PURPOSE: Always provide all types
#-------------------------------------------------------------------------------
alias type='type -a'

#-------------------------------------------------------------------------------
# PURPOSE: uname -- always want all the information
#-------------------------------------------------------------------------------
alias uname='uname -a'

#-------------------------------------------------------------------------------
# PURPOSE: Always see differences and update every ten seconds.
#-------------------------------------------------------------------------------
alias watch='watch -d -n 10'
